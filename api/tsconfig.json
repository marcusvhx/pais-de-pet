{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./dist",
    "rootDir": ".",
    "types": ["node", "express"]
  },
  "include": ["./src/**/*", "./api/**/*"],
  "exclude": ["./node_modules", "./dist"]
}
